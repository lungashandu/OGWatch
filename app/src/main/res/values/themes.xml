<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrientGardenNeighbourhoodWatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_colour</item>
        <item name="colorPrimaryVariant">@color/base_colour</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_colour</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OrientGardenNeighbourhoodWatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="submitButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/secondary_colour</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.OrientGardenNeighbourhoodWatch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrientGardenNeighbourhoodWatch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text and border color in light mode. -->
    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>